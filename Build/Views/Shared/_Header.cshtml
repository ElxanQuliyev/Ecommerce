                                </a>
                                <ul class="dropdown">
                                    @if (User.IsInRole("Administrator"))
                                    {
                                        <li>
                                            <a href="@Url.Dashboard()">
                                                @("PP.Header.Menu.Dashboard".Localized())
                                            </a>
                                        </li>
                                    }
                                    <li>
                                        <a href="@Url.UserProfile()">
                                            @("PP.Header.Menu.Profile".Localized())
